<!-- background_with_border_and_shadow.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Sombra -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#33000000" /> <!-- Cor da sombra (transparÃªncia preta) -->
            <corners android:radius="12dp" /> <!-- Raio dos cantos da sombra -->
            <padding
                android:left="8dp"
                android:right="8dp"
                android:top="8dp"
                android:bottom="8dp" /> <!-- Tamanho da sombra para destacar -->
        </shape>
    </item>

    <!-- Borda e Fundo -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" /> <!-- Cor de fundo interna -->
            <stroke android:width="4dp" android:color="@android:color/holo_blue_dark" /> <!-- Cor e espessura da borda -->
            <corners android:radius="12dp" /> <!-- Raio dos cantos da borda -->
        </shape>
    </item>
</layer-list>
